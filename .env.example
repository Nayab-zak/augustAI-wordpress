# WordPress SMTP Configuration
# Copy this file to .env and fill in your actual values
# Keep .env file secure and never commit to version control!

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-smtp-password-or-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Your Site Contact Form

# Contact form settings
CONTACT_TO_EMAIL=hello@yourdomain.com

# Contact Information (WhatsApp, Phone, Calendly)
WHATSAPP_NUMBER=1234567890
PHONE_NUMBER=1234567890
CALENDLY_URL=https://calendly.com/your-username/30min

# Business Information
BUSINESS_EMAIL=hello@yourdomain.com
BUSINESS_NAME=Your Business Name
